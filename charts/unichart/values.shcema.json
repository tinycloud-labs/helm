{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "app": {
            "type": "object",
            "properties": {
                "affinity": {
                    "type": "object"
                },
                "containerPort": {
                   "type": "integer"
                },
                "dbHostname": {
                    "type": "null"
                },
                "env": {
                    "type": "array"
                },
                "envFromSecrets": {
                    "type": "object",
                    "properties": {
                        "enabled": {
                            "type": "boolean"
                        },
                        "secretRefNames": {
                            "type": "array"
                        }
                    }
                },
                "image": {
                    "type": "object",
                    "properties": {
                        "pullPolicy": {
                            "type": "string"
                        },
                        "repository": {
                            "type": "string"
                        },
                        "tag": {
                            "type": "string"
                        }
                    }
                },
                "livenessProbe": {
                    "type": "object",
                    "properties": {
                        "command": {
                            "type": "array"
                        },
                        "enabled": {
                            "type": "boolean"
                        },
                        "failureThreshold": {
                            "type": "integer"
                        },
                        "initialDelaySeconds": {
                            "type": "integer"
                        },
                        "periodSeconds": {
                            "type": "integer"
                        },
                        "timeoutSeconds": {
                            "type": "integer"
                        }
                    }
                },
                "name": {
                    "type": "string"
                },
                "readinessProbe": {
                    "type": "object",
                    "properties": {
                        "enabled": {
                            "type": "boolean"
                        }
                    }
                },
                "replicaCount": {
                    "type": "integer"
                },
                "service": {
                    "type": "object",
                    "properties": {
                        "port": {
                            "type": "integer"
                        },
                        "targetPort": {
                            "type": "integer"
                        }
                    }
                },
                "volumeMounts": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "mountPath": {
                                "type": "string"
                            },
                            "subPath": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        },
        "database": {
            "type": "object",
            "properties": {
                "affinity": {
                    "type": "object"
                },
                "enabled": {
                    "type": "boolean"
                },
                "env": {
                    "type": "array"
                },
                "host": {
                    "type": "string"
                },
                "image": {
                    "type": "object",
                    "properties": {
                        "pullPolicy": {
                            "type": "string"
                        },
                        "repository": {
                            "type": "string"
                        },
                        "tag": {
                            "type": "string"
                        }
                    }
                },
                "port": {
                    "type": "integer"
                },
                "replicas": {
                    "type": "integer"
                },
                "volumeMounts": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "mountPath": {
                                "type": "string"
                            },
                            "subPath": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        },
        "fullnameOverride": {
            "type": "null"
        },
        "ingress": {
            "type": "object",
            "properties": {
                "annotations": {
                    "type": "object"
                },
                "enabled": {
                    "type": "boolean"
                },
                "host": {
                    "type": "string"
                },
                "ingressClassName": {
                    "type": "string"
                },
                "port": {
                    "type": "integer"
                }
            }
        },
        "nameOverride": {
            "type": "null"
        },
        "namespace": {
            "type": "null"
        },
        "persistence": {
            "type": "object",
            "properties": {
                "accessMode": {
                    "type": "string"
                },
                "enabled": {
                    "type": "boolean"
                },
                "existingClaim": {
                    "type": "string"
                },
                "reclaimPolicy": {
                    "type": "string"
                },
                "size": {
                    "type": "string"
                },
                "storageClassName": {
                    "type": "string"
                }
            }
        }
    }
}
